<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
	  <TargetFramework>netcoreapp3.1</TargetFramework>
	  <RazorCompileToolset>RazorSdk</RazorCompileToolset>
	  <RazorCompileOnBuild>true</RazorCompileOnBuild>
	  <EmbedRazorGenerateSources>true</EmbedRazorGenerateSources>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <Version>0.0.1</Version>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageProjectUrl>https://github.com/intv0id/Telescope</PackageProjectUrl>
	  <Description>Telescope provides a .NET support for rendering Jupyter notebooks into HTML format.</Description>
  </PropertyGroup>
	
  <ItemGroup>
	  <PackageReference Include="Markdig.Signed" Version="0.24.0" />
	  <PackageReference Include="Microsoft.AspNetCore.Razor" Version="2.2.0" />
	  <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" />
	  <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor" Version="2.2.0" />
	  <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.Extensions" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Telescope.Common\Telescope.Common.csproj" />
  </ItemGroup>

</Project>
